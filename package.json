{
  "name": "k8s-value-editor",
  "version": "1.0.0",
  "description": "A Kubernetes tool for editing release values",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . k8s-value-editor --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/icon.ico --prune=true --out=release-builds --version-string.ProductName=\"K8S Value Editor\"",
    "package-linux": "electron-packager . k8s-value-editor --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/icon.png --prune=true --out=release-builds"
  },
  "repository": "https://github.com/dorin131/k8s-value-editor",
  "keywords": [
    "k8s",
    "kubernetes"
  ],
  "author": "Dorin Fodor",
  "license": "MIT",
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-packager": "^12.1.0"
  }
}
